# Default editor.
export EDITOR=nvim

# Go language.
export GOPATH=$HOME/go
export GOROOT=$(brew --prefix golang)/libexec
test -d $GOPATH || mkdir $GOPATH
test -d $GOPATH/src/github.com || mkdir -p $GOPATH/src/github.com

# Search path.
export PATH=$HOME/.local/bin:$PATH
export PATH=$HOME/.local/sbin:$PATH
export PATH=/usr/local/sbin:$PATH
export PATH=$HOME/Scripts:$PATH
export PATH=$HOME/.pyenv/bin:$PATH
export PATH=$HOME/.poetry/bin:$PATH

export ZSH_PYENV_LAZY_VIRTUALENV=true
# Initialize pyenv. Put this after all the PATH updates are done.
# eval "$(pyenv init -)"

# Enable auto-activation of virtualenvs.
# NOTE: Disabled it speeds up new shells.
# eval "$(pyenv virtualenv-init -)"

# This will make Pipenv use pyenvâ€™s active Python version to create virtual
# environments by default.
# NOTE: gcloud is supported up to 3.8: https://stackoverflow.com/a/64011263
# export PIPENV_PYTHON="$(pyenv root)/shims/python"
# export CLOUDSDK_PYTHON=$PIPENV_PYTHON
export CLOUDSDK_PYTHON=$HOME/.pyenv/versions/3.8.6/bin/python

# Used by weechat on OSX.
if [[ "$(uname)" == "Darwin" ]]
then
	export PKG_CONFIG_PATH=/usr/local/opt/libffi/lib/pkgconfig
fi

# For nvm, the node version manager.
# https://github.com/nvm-sh/nvm/issues/539#issuecomment-245791291
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh" # This loads nvm

# alias node='unalias node ; unalias npm ; nvm use default ; node $@'
# alias npm='unalias node ; unalias npm ; nvm use default ; npm $@'

# For the Google Cloud SDK installed via brew cask.
if [[ "$(uname)" == "Darwin" ]]
then
	source '/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc'
	source '/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc'
	export PATH="/usr/local/opt/postgresql@9.4/bin:$PATH"
fi


function path_remove () {
  # Delete path by parts so we can never accidentally remove sub paths
  PATH=${PATH//":$1:"/":"} # delete any instances in the middle
  PATH=${PATH/#"$1:"/} # delete any instance at the beginning
  PATH=${PATH/%":$1"/} # delete any instance in the at the end
}

path_remove "/Applications/Little Snitch.app/Contents/Components"

